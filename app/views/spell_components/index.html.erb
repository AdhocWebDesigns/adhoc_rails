<p id="notice"><%= notice %></p>

<h1>Spell Components</h1>

<table>
  <thead>
    <tr>
      <th>Spell component type</th>
      <th>Name</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spell_components.each do |spell_component| %>
      <tr>
        <td><%= spell_component.spell_component_type %></td>
        <td><%= spell_component.name %></td>
        <td><%= spell_component.desc %></td>
        <td><%= link_to 'Show', spell_component %></td>
        <td><%= link_to 'Edit', edit_spell_component_path(spell_component) %></td>
        <td><%= link_to 'Destroy', spell_component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

