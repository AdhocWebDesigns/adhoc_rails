<p id="notice"><%= notice %></p>

<h1>Spells</h1>

<table>
  <thead>
    <tr>
      <th>Level</th>
      <th>Cast time</th>
      <th>Range</th>
      <th>Components</th>
      <th>Duration</th>
      <th>Spell school</th>
      <th>Attack save</th>
      <th>Damage effect</th>
      <th>Name</th>
      <th>Dnd classes</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spells.each do |spell| %>
      <tr>
        <td><%= spell.level %></td>
        <td><%= spell.cast_time %></td>
        <td><%= spell.range %></td>
        <td><%= spell.components %></td>
        <td><%= spell.duration %></td>
        <td><%= spell.spell_school %></td>
        <td><%= spell.attack_save %></td>
        <td><%= spell.damage_effect %></td>
        <td><%= spell.name %></td>
        <td><%= spell.dnd_classes %></td>
        <td><%= spell.desc %></td>
        <td><%= link_to 'Show', spell %></td>
        <td><%= link_to 'Edit', edit_spell_path(spell) %></td>
        <td><%= link_to 'Destroy', spell, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spell', new_spell_path %>
