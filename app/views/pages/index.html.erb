<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Published at</th>
      <th>Page title</th>
      <th>Heading</th>
      <th>Subheading</th>
      <th>Contents</th>
      <th>Images</th>
      <th>Parents</th>
      <th>Children</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.author %></td>
        <td><%= page.published_at %></td>
        <td><%= page.page_title %></td>
        <td><%= page.heading %></td>
        <td><%= page.subheading %></td>
        <td><%= page.contents %></td>
        <td><%= page.images %></td>
        <td><%= page.parents %></td>
        <td><%= page.children %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path %>
