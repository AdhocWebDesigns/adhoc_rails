<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Link</th>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Heading</th>
      <th>Subheading</th>
      <th>Weight</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.user %></td>
        <td><%= page.link %></td>
        <td><%= page.title %></td>
        <td><%= page.subtitle %></td>
        <td><%= page.heading %></td>
        <td><%= page.subheading %></td>
        <td><%= page.weight %></td>
        <td><%= page.body %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

